    <div class="col-xs-10 col-xs-offset-1">

        <%- model_class = Areaimage -%>
        <div class="page-header">
          <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
        </div>
        <%= render :partial => 'form' %>

    </div>
</div>
